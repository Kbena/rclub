{% extends 'base.html.twig' %}


{% block body %}
    
    {% if app.user %}
        <main class="main-log">

        <!-- Material form subscription -->
            <h2>Réserver ici</h2>
            <div class="card">
                <h2 class="card-header white-text text-center py-4 tit-con-form">
                    <strong></strong>
                </h2>

                <!--Card content-->
                <div class="card-body px-lg-5">
                    <!-- Form -->
                    {{ form_start(form) }}
                    {# <form class="text-center" action="{{ path('security_registration') }}" method="post" style="color: #757575;"> #}
                        <p>Join our mailing list. We write rarely, but only the best content.</p>
                        <p>
                            <a href="" target="_blank">See the last newsletter</a>
                        </p> 
                        <div class="md-form">
                            {{ form_row(form.prenom, {'label': 'Prenom','attr': {'placeholder': 'Votre Prenom' }}) }}
                            {# <input type="text" id="registration_username" class="form-control" name="registration[username]" required="required"
                            maxlength="255" placeholder="Pseudo">
                            <label for="registration_username" class="required active">Nom d'utilisateur</label> #}
                        </div>                
