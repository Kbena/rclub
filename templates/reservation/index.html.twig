                        <div class="md-form">
                            {{ form_row(form.nom, {'label': 'Nom','attr': {'placeholder': 'Votre Nom' }}) }}
                            {# <input type="email" id="registration_email" class="form-control" name="registration[email]" required="required"
                            maxlength="255" placeholder="Email">
                            <label for="registration_email" class="required active">Email</label> #}
                        </div>
                        <!-- Name -->
                        <div class="md-form mt-3">
                            {{ form_row(form.mail, {'label': 'Email','attr': {'placeholder': 'Votre Email' }}) }}
                            {# <input type="password" id="registration_password" name="registration[password]" required="required" placeholder="Mot de Passe" class="form-control">
                            <label for="registration_password" class="required active">Mot de Passe</label> #}
                        </div>
                        <div class="md-form mt-3">
                            {{ form_row(form.telephone, {'label': 'Telephone','attr': {'placeholder': 'Votre téléphone' }}) }}
