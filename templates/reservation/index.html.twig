                            {{ form_row(form.nbre_place, {'label': 'Nbre Place Souhaité','attr': {'placeholder': 'Nombre de places désirés' } }) }}
                            {# <input type="password" id="registration_confirm_password" name="registration[confirm_password]" required="required" placeholder="Confirmez votre Mot de Passe" class="form-control">
                            <label for="registration_confirm_password" class="required active">Confirmation du Mot de Passe</label> #}
                        </div>
                        <!-- Sign in button -->
                        <button class="btn btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Je Réserve</button>
                    {{ form_end(form) }}
                </div>

            </div>
            <!-- Material form subscription -->
    </main>





    {% else %}
    <p>Vous devez vous connecter pour accèder à votre espace personnel, <a href="{{path('security_login') }}">Cliquez ici</a></p>
    {% endif %}

{% endblock %}
