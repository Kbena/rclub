{% extends 'base.html.twig' %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

    <br><br>

    <div class="prog">
        <h2>Connectez Vous Ici <i class="fab fa-ethereum"></i></h2>
    </div>
    <br>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <i class="fas fa-at"></i> Email
            <input type="text" class="form-control" name="_username" 
            placeholder="Votre Email" required>
        </div>
        <div class="form-group">
            <i class="fas fa-unlock-alt"></i> Mot de Passe
            <input type="password" class="form-control" name="_password" 
            placeholder="Votre Mot de Passe" required> 
        </div>
        <div>
            <button type="submit" class="btn btn-success float-right">Connexion</button>
        </div>
        <br>

    </form>

{% endblock %}